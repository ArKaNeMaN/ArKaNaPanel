<?php $this->title = 'Домашняя страница';?>

<?php
	$homePageBlocks = json_decode($this->settings['core']['blocks']['homePage'], true);
	function homePageBlocks_sortFunc($a, $b){return ($a['pos'] > $b['pos']);}
	uasort($homePageBlocks, 'homePageBlocks_sortFunc');
	foreach($homePageBlocks as $v){
		$blockInfo = $this->getBlock($v['block']);
		if($blockInfo['homePage']) $this->incBlock_($v['block']);
	}
?>